# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration (для Docker)
DB_HOST=postgres
DB_PORT=5432
DB_USER=workbot
DB_PASSWORD=your_secure_password_here
DB_NAME=workbot

# Groq AI Configuration
GROQ_API_KEY=your_groq_api_key_here

# OpenRouter Configuration (GLM-4 и другие модели)
# Получить ключ: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Working Directory (путь к Excel файлам)
# Для Docker: /data
# Для локальной разработки: ~/Desktop/Работа
WORK_DIR=/data

# Google Sheets Configuration
GOOGLE_CREDENTIALS_PATH=/app/google-credentials.json
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# Google OAuth2 (альтернатива Service Account — для личного аккаунта)
# Сначала запустите: go run cmd/oauth_setup/main.go
GOOGLE_OAUTH_CREDENTIALS_PATH=oauth-credentials.json
GOOGLE_TOKEN_PATH=google-token.json
