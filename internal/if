if "Регистрация" == update.Message.Text {
			//b.RegisterUser(update, db, bot, updates)
		} else if "Записаться на тренировку" == update.Message.Text {
			var rows []tgbotapi.InlineKeyboardButton
			for i := 1; i <= 31; i++ {
				btn := tgbotapi.NewInlineKeyboardButtonData(
					fmt.Sprintf("%d", i),
					fmt.Sprintf("calendar_%d", i))
				rows = append(rows, btn)
			}

			keyboard := tgbotapi.NewInlineKeyboardMarkup(
				tgbotapi.NewInlineKeyboardRow(rows...),
			)

			msg := tgbotapi.NewMessage(update.Message.Chat.ID, "Выберите дату:")
			msg.ReplyMarkup = keyboard

			b.bot.Send(msg)
		} else {
			msg = tgbotapi.NewMessage(update.Message.Chat.ID, "Выберите действие:")
			keyboard := tgbotapi.NewReplyKeyboard(
				tgbotapi.NewKeyboardButtonRow(
					tgbotapi.NewKeyboardButton("Регистрация"),
					tgbotapi.NewKeyboardButton("Записаться на тренировку"),
				),
			)
			msg.ReplyMarkup = keyboard
			if _, err := b.bot.Send(msg); err != nil {
				log.Panic(err)
			}
			continue
		}